@model IEnumerable<kdubois1_MVC_Music.Models.Musician>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.profilePicPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instrument)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="vertical-align:middle">
                <img src="@item.profilePicPath" alt="@item.DisplayName profile image" class="img-circle" style="width:100px; height:auto"/>
            </td>
            <td style="vertical-align:middle">
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td style="vertical-align:middle">
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td style="vertical-align:middle">
                @Html.DisplayFor(modelItem => item.Instrument.Name)
            </td>
            <td style="vertical-align:middle">
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
